# Extract anc Compress files
extract() {
  if [ -z "$1" ]; then
    echo "Usage: extract <file>"
    return 1
  fi

  case "$1" in
    *.tar.bz2)  tar xvjf "$1" ;;
    *.tar.gz)   tar xvzf "$1" ;;
    *.tar.xz)   tar xvJf "$1" ;;
    *.tar.Z)    tar xvZf "$1" ;;
    *.tar)      tar xvf "$1" ;;
    *.bz2)      bunzip2 "$1" ;;
    *.rar)      unrar x "$1" ;;
    *.gz)       gunzip "$1" ;;
    *.zip)      unzip "$1" ;;
    *.7z)       7z x "$1" ;;
    *.xz)       unxz "$1" ;;
    *.Z)        uncompress "$1" ;;
    *)          echo "extract: cannot extract '$1'" ;;
  esac
}

alias logout="loginctl kill-session $(loginctl | grep $USER | awk '{print $1}')"


compress() {
  if [ -z "$2" ]; then
    echo "Usage: compress <file|directory> <archive_name>"
    return 1
  fi

  case "$2" in
    *.tar.bz2)  tar cvjf "$2" "$1" ;;
    *.tar.gz)   tar cvzf "$2" "$1" ;;
    *.tar.xz)   tar cvJf "$2" "$1" ;;
    *.tar.Z)    tar cvZf "$2" "$1" ;;
    *.tar)      tar cvf "$2" "$1" ;;
    *.bz2)      bzip2 -zk "$1" ;;
    *.gz)       gzip -k "$1" ;;
    *.zip)      zip -r "$2" "$1" ;;
    *.7z)       7z a "$2" "$1" ;;
    *.xz)       xz -z "$1" ;;
    *)          echo "compress: unsupported archive format '$2'" ;;
  esac
}



show_sddm_theme() {
    sddm-greeter --test-mode --theme /usr/share/sddm/themes/"$1"
}

alias psql=psql_wrapper

psql_wrapper() {
    local args=("$@") username="" override=1
    while [[ $# -gt 0 ]]; do
        if [[ $1 == "-h" ]]; then
            username=$(grep $2 ~/.pgpass | head -n 1 | cut -d : -f 4)
        elif [[ $1 == "-U" ]]; then
            override=""
        fi
        shift
    done
    if [[ $username && $override ]]; then
        echo "-U" "$username"
        args+=("-U" "$username")
    fi
    \psql "${args[@]}"
}
